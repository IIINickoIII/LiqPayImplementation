@model RetroCarShop.ViewModels.CarViewModel
@{
    if (Model.Id == 0)
    {
        ViewBag.Title = "New Car";
    }
    else
    {
        ViewBag.Title = $"Edit {Model.Name}";
    }
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>@ViewBag.Title</h1>
@using (Html.BeginForm("Save", "Cars", FormMethod.Post))
{
    <div class="form-group">
        @Html.LabelFor(c => c.Name, htmlAttributes: new { @class = "col-form-label col-form-label-sm" })
        @Html.TextBoxFor(c => c.Name, htmlAttributes: new { @class = "form-control form-control-sm" })
        @Html.ValidationMessageFor(c => c.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.YearOfManufacturing, htmlAttributes: new { @class = "col-form-label col-form-label-sm" })
        @Html.TextBoxFor(c => c.YearOfManufacturing, htmlAttributes: new { @class = "form-control form-control-sm", @type = "number", @min = 1900, @max = DateTime.Now.Year, @step = 1 })
        @Html.ValidationMessageFor(c => c.YearOfManufacturing)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Mileage, htmlAttributes: new { @class = "col-form-label col-form-label-sm" })
        @Html.TextBoxFor(c => c.Mileage, htmlAttributes: new { @class = "form-control form-control-sm", @type = "number", @min = 0, @max = 5000000, @step = 1 })
        @Html.ValidationMessageFor(c => c.Mileage)
    </div>
    <div class="form-group">
        @Html.LabelFor(c => c.Price, htmlAttributes: new { @class = "col-form-label col-form-label-sm" })
        @Html.TextBoxFor(c => c.Price, htmlAttributes: new { @class = "form-control form-control-sm", @type = "number", @min = 1, @max = 5000000000, @step = 1 })
        @Html.ValidationMessageFor(c => c.Price)
    </div>
    @Html.HiddenFor(c => c.Id)
    @Html.HiddenFor(c => c.IsSold)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary btn-add-car">Save</button>
}
@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}


